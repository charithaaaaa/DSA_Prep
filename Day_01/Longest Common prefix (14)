class Solution:
    def longestCommonPrefix(self, strs: List[str]) -> str:
        ans=""
        strs=sorted(strs)
        first=strs[0]
        last=strs[-1]
        for i in range(min(len(first), len(last))): #as it takes 1 or 3 parameters giving min takes 1 
            if (first[i]!=last[i]):
                return ans #we cant use += with return
            ans+= first[i]
        return ans
        
